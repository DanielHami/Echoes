---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Layout>
    <!-- Background (component) added by Aura -->
    <div class="aura-background-component top-0 w-full h-screen -z-10 absolute">
      <div data-us-project="hk4GkXoEfSX9qZozoFL6" class="absolute w-full h-full left-0 top-0 -z-10"></div>
      <script is:inline type="text/javascript">
        !function(){if(!window.UnicornStudio){window.UnicornStudio={isInitialized:!1};var i=document.createElement("script");i.src="https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.31/dist/unicornStudio.umd.js",i.onload=function(){window.UnicornStudio.isInitialized||(UnicornStudio.init(),window.UnicornStudio.isInitialized=!0)},(document.head || document.body).appendChild(i)}}();
      </script>
    </div>
  
    <!-- Ambient Particles -->
    <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
      <div class="particle absolute w-1 h-1 bg-red-500/40 rounded-full blur-sm" style="left: 10%; top: 20%; --tx: 50px; --ty: -200px; animation-delay: 0s;"></div>
      <div class="particle absolute w-1.5 h-1.5 bg-purple-500/30 rounded-full blur-sm" style="left: 80%; top: 40%; --tx: -100px; --ty: -300px; animation-delay: 3s;"></div>
      <div class="particle absolute w-1 h-1 bg-amber-500/30 rounded-full blur-sm" style="left: 30%; top: 60%; --tx: 80px; --ty: -250px; animation-delay: 6s;"></div>
      <div class="particle absolute w-2 h-2 bg-red-500/20 rounded-full blur-md" style="left: 60%; top: 80%; --tx: -60px; --ty: -180px; animation-delay: 9s;"></div>
      <div class="particle absolute w-1 h-1 bg-purple-400/40 rounded-full blur-sm" style="left: 90%; top: 15%; --tx: -120px; --ty: -220px; animation-delay: 12s;"></div>
    </div>
  
    <!-- Grain Overlay -->
    <div class="grain fixed inset-0 pointer-events-none z-10 opacity-40"></div>
  
    <!-- Navigation -->
    <nav class="fixed z-50 top-0 right-0 left-0">
      <div class="mx-auto max-w-7xl px-6 sm:px-8 pt-3">
        <div class="flex bg-white/5 border-white/10 border rounded-none pt-4 pr-8 pb-4 pl-8 backdrop-blur-xl items-center justify-between">
          <div class="text-2xl font-light tracking-widest text-white" style="font-family: 'Playfair Display', serif;">ECHOES</div>
          <div class="hidden md:flex items-center gap-8 text-sm font-light tracking-wide text-white/80">
            <a href="#experience" class="transition-colors hover:text-white">Skúsenosti</a>
            <a href="#about" class="transition-colors hover:text-white">O nás</a>
            <a href="#gallery" class="transition-colors hover:text-white">Galéria</a>
            <a href="#price" class="transition-colors hover:text-white">Cenník</a>
            <a href="#contact" class="transition-colors hover:text-white">Kontakt</a>
          </div>
          <button id="mobile-menu-btn" class="md:hidden text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </button>
        </div>
      </div>
      
      <div id="offcanvas-backdrop" class="offcanvas-backdrop"></div>
      <aside id="mobile-menu" class="offcanvas-panel md:hidden" aria-hidden="true">
        <div class="flex flex-col p-4 gap-4">
          <a href="#experience" class="text-sm font-light tracking-wide text-white/90 transition-colors hover:text-white">Experience</a>
          <a href="#about" class="text-sm font-light tracking-wide text-white/90 transition-colors hover:text-white">About</a>
          <a href="#gallery" class="text-sm font-light tracking-wide text-white/90 transition-colors hover:text-white">Gallery</a>
          <a href="#price" class="text-sm font-light tracking-wide text-white/90 transition-colors hover:text-white">Price</a>
          <a href="#contact" class="text-sm font-light tracking-wide text-white/90 transition-colors hover:text-white">Contact</a>
        </div>
      </aside>
    </nav>
  
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Ambient Glow Background -->
      <div class="absolute top-0 right-0 bottom-0 left-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-red-600/10 rounded-full blur-3xl animate-pulse-glow"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-600/10 rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 1.5s;"></div>
      </div>
      
      <!-- Background word with bottom dissolve -->
      <div id="parallax-bg" aria-hidden="true" class="pointer-events-none absolute inset-x-0 top-24 sm:top-36 flex justify-center text-4xl sm:text-6xl md:text-8xl lg:text-9xl font-semibold tracking-tight text-white/5 select-none transition-transform duration-0" style="mask-image: linear-gradient(rgb(0, 0, 0) 65%, rgba(0, 0, 0, 0) 100%); will-change: transform;">
        SPOMÍNANIA
      </div>
      
      <div id="hero-content" class="relative z-10 text-center px-6 py-32 transition-all duration-0">
        <!-- Spacer to preserve original hero spacing after removing portrait -->
        <div class="mb-12 h-[22rem] sm:h-80 md:h-96"></div>
  
        <!-- Hero Text -->
        <h1 class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-light tracking-tight text-white mb-6 text-outline animate-in delay-200" style="font-family: 'Playfair Display', serif;">ECHOES</h1>
        <p class="text-base sm:text-lg md:text-xl font-extralight tracking-wide text-neutral-300 max-w-2xl mx-auto mb-12 leading-relaxed animate-in delay-300">
          Počuj tých, ktorí chýbajú. Uvidíš lásku, na ktorú nezabúdaš
        </p>
  
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-in delay-400">
          <a href="#experience" class="group inline-flex items-center gap-3 transition-all hover:bg-red-700 hover:shadow-lg hover:shadow-red-600/50 font-light text-white tracking-wide bg-red-600 px-8 py-4 relative">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"></circle><circle cx="18" cy="16" r="3"></circle></svg>
            Ukážky projektu
          </a>
          <a href="#about" class="inline-flex items-center gap-3 px-8 py-4 border border-white/20 text-white font-light tracking-wide backdrop-blur-sm transition-all hover:bg-white/5 hover:border-white/40">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path></svg>
            Ako to funguje
          </a>
        </div>
  
        <!-- Scroll Indicator -->
        <div class="absolute bottom-12 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-white/40 animate-bounce animate-in delay-500">
          <span class="text-xs font-light tracking-widest">ROLOVAŤ</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14m7-7-7 7-7-7"></path></svg>
        </div>
      </div>
    </section>
  
    <!-- Visual Album Section -->
    <section class="sm:px-8 pt-32 pr-6 pb-32 pl-6 relative" id="experience">
      <div class="mx-auto max-w-7xl">
        <div class="text-center mb-20">
          <h2 class="text-4xl sm:text-5xl md:text-6xl font-light tracking-tight text-white mb-4 animate-in" style="font-family: 'Playfair Display', serif;">Visual Album</h2>
          <p class="text-sm sm:text-base font-extralight tracking-wide text-neutral-400 animate-in delay-100">Chapters of sound translated into motion</p>
        </div>
  
        <div class="space-y-8">
          <!-- Track 1 -->
          <div class="group relative overflow-hidden bg-gradient-to-br from-red-950/20 to-transparent border border-red-500/10 backdrop-blur-sm transition-all hover:border-red-500/30 animate-in">
            <div class="grid grid-cols-1 lg:grid-cols-12 items-center">
              <div class="lg:col-span-5 aspect-video lg:aspect-square overflow-hidden">
                <img src="https://hoirqrkdgbmvpwutwuwj-all.supabase.co/storage/v1/object/public/assets/assets/0db5b9f1-ec3e-4f81-a9dd-299db35d3aa6_3840w.jpg" alt="Crimson Pulse" class="transition duration-700 group-hover:scale-105 w-full h-full object-cover">
              </div>
              <div class="lg:col-span-7 p-8 lg:p-12">
                <div class="flex items-center gap-4 mb-6">
                  <span class="text-5xl font-extralight text-red-500/60">01</span>
                  <div class="h-px flex-1 bg-gradient-to-r from-red-500/40 to-transparent"></div>
                </div>
                <h3 class="text-3xl sm:text-4xl font-light tracking-tight text-white mb-4" style="font-family: 'Playfair Display', serif;">Crimson Pulse</h3>
                <p class="text-sm font-light text-neutral-400 mb-8 leading-relaxed italic">"The heartbeat of desire, painted in red."</p>
                <button class="play-btn group/btn inline-flex items-center gap-3 px-6 py-3 border border-red-500/30 text-red-400 font-light tracking-wide transition-all hover:bg-red-500/10 hover:border-red-500/50">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                  Play Experience
                </button>
              </div>
            </div>
          </div>
  
          <!-- Track 2 -->
          <div class="group relative overflow-hidden bg-gradient-to-br from-purple-950/20 to-transparent border border-purple-500/10 backdrop-blur-sm transition-all hover:border-purple-500/30 animate-in delay-100">
            <div class="grid grid-cols-1 lg:grid-cols-12 items-center">
              <div class="lg:col-span-7 p-8 lg:p-12 order-2 lg:order-1">
                <div class="flex items-center gap-4 mb-6">
                  <span class="text-5xl font-extralight text-purple-500/60">02</span>
                  <div class="h-px flex-1 bg-gradient-to-r from-purple-500/40 to-transparent"></div>
                </div>
                <h3 class="text-3xl sm:text-4xl font-light tracking-tight text-white mb-4" style="font-family: 'Playfair Display', serif;">Reflections in Glass</h3>
                <p class="text-sm font-light text-neutral-400 mb-8 leading-relaxed italic">"Fragments of memory caught between light and shadow."</p>
                <button class="play-btn group/btn inline-flex items-center gap-3 px-6 py-3 border border-purple-500/30 text-purple-400 font-light tracking-wide transition-all hover:bg-purple-500/10 hover:border-purple-500/50">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                  Play Experience
                </button>
              </div>
              <div class="lg:col-span-5 aspect-video lg:aspect-square overflow-hidden order-1 lg:order-2">
                <img src="https://hoirqrkdgbmvpwutwuwj-all.supabase.co/storage/v1/object/public/assets/assets/ada23122-88a0-4549-a816-aa0d985efcbf_1600w.webp" alt="Reflections" class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
              </div>
            </div>
          </div>
  
          <!-- Track 3 -->
          <div class="group relative overflow-hidden bg-gradient-to-br from-amber-950/20 to-transparent border border-amber-500/10 backdrop-blur-sm transition-all hover:border-amber-500/30 animate-in delay-200">
            <div class="grid grid-cols-1 lg:grid-cols-12 items-center">
              <div class="lg:col-span-5 aspect-video lg:aspect-square overflow-hidden">
                <img src="https://hoirqrkdgbmvpwutwuwj-all.supabase.co/storage/v1/object/public/assets/assets/4b769dcd-6824-405e-9468-9e9de7c75d81_1600w.jpg" alt="Falling Light" class="transition duration-700 group-hover:scale-105 w-full h-full object-cover">
              </div>
              <div class="lg:col-span-7 p-8 lg:p-12">
                <div class="flex items-center gap-4 mb-6">
                  <span class="text-5xl font-extralight text-amber-500/60">03</span>
                  <div class="h-px flex-1 bg-gradient-to-r from-amber-500/40 to-transparent"></div>
                </div>
                <h3 class="text-3xl sm:text-4xl font-light tracking-tight text-white mb-4" style="font-family: 'Playfair Display', serif;">Falling Light</h3>
                <p class="text-sm font-light text-neutral-400 mb-8 leading-relaxed italic">"Grace descends in golden silence."</p>
                <button class="play-btn group/btn inline-flex items-center gap-3 px-6 py-3 border border-amber-500/30 text-amber-400 font-light tracking-wide transition-all hover:bg-amber-500/10 hover:border-amber-500/50">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                  Play Experience
                </button>
              </div>
            </div>
          </div>
  
          <!-- Track 4 -->
          <div class="group relative overflow-hidden bg-gradient-to-br from-red-950/20 to-transparent border border-red-500/10 backdrop-blur-sm transition-all hover:border-red-500/30 animate-in delay-300">
            <div class="grid grid-cols-1 lg:grid-cols-12 items-center">
              <div class="lg:col-span-7 lg:p-12 order-2 lg:order-1 pt-8 pr-8 pb-8 pl-8">
                <div class="flex items-center gap-4 mb-6">
                  <span class="text-5xl font-extralight text-pink-500/60">04</span>
                  <div class="h-px flex-1 bg-gradient-to-r from-pink-500/40 to-transparent"></div>
                </div>
                <h3 class="text-3xl sm:text-4xl font-light tracking-tight text-white mb-4" style="font-family: 'Playfair Display', serif;">Echoes of You</h3>
                <p class="text-sm font-light text-neutral-400 mb-8 leading-relaxed italic">"Reverberations of presence long after the sound has faded."</p>
                <button class="play-btn group/btn inline-flex gap-3 transition-all hover:bg-red-500/10 hover:border-pink-500/50 font-light text-pink-400 tracking-wide border-pink-400/30 border px-6 py-3 gap-x-3 gap-y-3 items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                  Play Experience
                </button>
              </div>
              <div class="lg:col-span-5 aspect-video lg:aspect-square overflow-hidden order-1 lg:order-2">
                <img src="https://hoirqrkdgbmvpwutwuwj-all.supabase.co/storage/v1/object/public/assets/assets/0415ae4b-2c65-41d6-92b9-3b67dc5d66ab_1600w.jpg" alt="Echoes" class="transition duration-700 group-hover:scale-105 w-full h-full object-cover">
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  
    <!-- About Section -->
    <section class="sm:px-8 bg-gradient-to-b from-transparent via-red-950/5 to-transparent pt-32 pr-6 pb-32 pl-6 relative" id="about">
      <div class="text-center max-w-4xl mr-auto ml-auto">
        <h2 class="text-4xl sm:text-5xl md:text-6xl font-light tracking-tight text-white mb-8 animate-in" style="font-family: 'Playfair Display', serif;">Nad spomienkou</h2>
        <div class="h-px bg-gradient-to-r from-transparent via-violet-500/50 to-transparent w-[41rem] mr-auto mb-12 ml-auto animate-in delay-100"></div>
        <p class="text-base sm:text-lg font-light leading-relaxed text-neutral-300 mb-8 animate-in delay-200">
          Vďaka AI sa 10‑sekundová nahrávka a jedna fotografia menia na jemnú audiovizuálnu spomienku
        </p>
        <p class="sm:text-base leading-relaxed text-sm text-neutral-400 font-extralight animate-in delay-300">Zo zlomku hlasu a obrazu citlivo oživujeme prítomnosť bez napodobňovania života tiché miesto, kde ich môžeš znovu počuť aj vidieť.﻿
          Pošli jednu fotografiu a krátku nahrávku a vytvoríme úctivý, filmový okamih, ku ktorému sa môžeš vracať.</p>
      </div>
    </section>
  
    <section id="gallery" class="relative py-32 px-6 sm:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl md:text-6xl font-light tracking-tight text-white mb-4 animate-in" style="font-family: 'Playfair Display', serif;">Galéria</h2>
          <p class="text-sm sm:text-base font-extralight tracking-wide text-neutral-400 mb-8 animate-in delay-100">Filmové zábery z vizuálneho vesmíru</p>
        </div>

        <div id="gallery-grid" class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <button class="video-thumb group relative aspect-square overflow-hidden bg-neutral-900 border border-white/5 transition hover:border-white/20 focus:outline-none animate-in delay-100" data-video="clip1.mp4">
            <img src="images/clip1.png" alt="Clip 1" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
          </button>
          <button class="video-thumb group relative aspect-square overflow-hidden bg-neutral-900 border border-white/5 transition hover:border-white/20 focus:outline-none animate-in delay-200" data-video="clip2.mp4">
            <img src="images/clip2.jpeg" alt="Clip 2" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
          </button>
          <button class="video-thumb group relative aspect-square overflow-hidden bg-neutral-900 border border-white/5 transition hover:border-white/20 focus:outline-none animate-in delay-300" data-video="clip3.mp4">
            <img src="images/clip3.jpg" alt="Clip 3" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
          </button>
          <button class="video-thumb group relative aspect-square overflow-hidden bg-neutral-900 border border-white/5 transition hover:border-white/20 focus:outline-none animate-in delay-400" data-video="clip4.mp4">
            <img src="images/clip4.jpg" alt="Clip 4" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
          </button>
          <button class="video-thumb group relative aspect-square overflow-hidden bg-neutral-900 border border-white/5 transition hover:border-white/20 focus:outline-none animate-in delay-500" data-video="clip5.mp4">
            <img src="images/clip5.jpg" alt="Clip 5" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
          </button>
          <button class="video-thumb group relative aspect-square overflow-hidden bg-neutral-900 border border-white/5 transition hover:border-white/20 focus:outline-none animate-in delay-600" data-video="clip6.mp4">
            <img src="images/clip6.jpg" alt="Clip 6" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
          </button>
        </div>
      </div>

      <div id="video-modal" class="fixed inset-0 z-[80] hidden">
        <div class="absolute inset-0 bg-black/70"></div>
        <div class="relative z-10 flex items-center justify-center h-screen p-4">
          <div class="relative w-full max-w-3xl aspect-video bg-black">
            <button id="video-modal-close" class="absolute -top-10 right-0 text-white px-3 py-1 border border-white/30 bg-white/10">Close</button>
            <video id="video-player" class="w-full h-full" controls playsinline preload="metadata"></video>
          </div>
        </div>
      </div>
    </section>
  
    <!-- Pricing Section -->
  <section id="price" class="relative py-32 px-6 sm:px-8">
    <div class="mx-auto max-w-7xl">
      <div class="text-center mb-10">
        <h2 class="text-4xl sm:text-5xl font-light tracking-tight text-white" style="font-family: 'Playfair Display', serif;">Cenník</h2>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
        <!-- Starter -->
        <article class="relative overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-b from-neutral-900/70 to-neutral-950/80 backdrop-blur-xl p-5 sm:p-6">
          <div class="flex items-center justify-between text-xs">
            <div class="inline-flex items-center gap-2 text-white/60">
              <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-neutral-950/80 ring-1 ring-white/10 text-white/80">01</span>
              <span class="">Starter</span>
            </div>
            
          </div>


          <div class="mt-4">
            <h3 class="text-2xl font-medium tracking-tight">Starter</h3>
            <p class="text-sm text-white/60 mt-1">For individuals and side projects.</p>
            <div class="mt-5 flex items-baseline gap-1">
              <span class="text-3xl font-medium tracking-tight" data-price="" data-monthly="29" data-yearly="23">$23</span>
              <span class="text-sm text-white/50">/mo</span>
            </div>
            <p class="text-xs text-white/40" data-billed-note="" data-monthly-note="Billed monthly" data-yearly-note="Billed yearly ($276)">Billed yearly ($276)</p>
            <button class="mt-5 inline-flex items-center justify-center gap-2 h-11 w-full rounded-full bg-white/90 text-neutral-900 text-sm font-normal hover:bg-white transition">
              Get Started
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" data-lucide="arrow-up-right" class="lucide lucide-arrow-up-right w-4 h-4"><path d="M7 7h10v10" class=""></path><path d="M7 17 17 7" class=""></path></svg>
            </button>
          </div>


          <div class="mt-6">
            <p class="text-xs text-white/60">Includes:</p>
            <ul class="mt-3 space-y-3">
              <li class="flex items-start gap-3">
                <span class="mt-0.5 h-5 w-5 rounded-full bg-neutral-900/70 border border-white/10 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" data-lucide="check" class="lucide lucide-check w-3.5 h-3.5 text-emerald-400"><path d="M20 6 9 17l-5-5" class=""></path></svg>
                </span>
                <span class="text-sm text-white/80">Up to 5 projects</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="mt-0.5 h-5 w-5 rounded-full bg-neutral-900/70 border border-white/10 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" data-lucide="check" class="lucide lucide-check w-3.5 h-3.5 text-emerald-400"><path d="M20 6 9 17l-5-5" class=""></path></svg>
                </span>
                <span class="text-sm text-white/80">10GB storage</span>
              </li>
